@model GenericResponseDto<IEnumerable<VoterResponseDto>>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pt-3">
        <h3>Votantes</h3>
    </div>

<div class="row">
    <p>
        <a class="btn btn-primary" asp-action="Create">Registrar Votante</a>
    </p>
</div>

<div class="row justify-content-center">
    <div class="col-md-10">
        <table class="table table-striped table-bordered table-sm">
            <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameForInnerType((VoterResponseDto v) => v.Name)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((VoterResponseDto v) => v.Department)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((VoterResponseDto v) => v.City)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((VoterResponseDto v) => v.IsActive)
                </th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var voter in Model.Data)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => voter.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => voter.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => voter.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => voter.IsActive)
                    </td>
                    <td>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>