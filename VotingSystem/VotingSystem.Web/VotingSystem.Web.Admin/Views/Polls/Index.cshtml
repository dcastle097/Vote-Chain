@model GenericResponseDto<IEnumerable<PollResponseDto>>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pt-3">
    <h3>Consultas</h3>
</div>

<div class="row">
    <p>
        <a class="btn btn-primary" asp-action="Create">Registrar Consulta</a>
    </p>
</div>

<div class="row justify-content-center">
    <div class="col-md-10">
        <table class="table table-striped table-bordered table-sm">
            <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameForInnerType((PollResponseDto p) => p.Title)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((PollResponseDto p) => p.StartDate)
                </th>
                <th>
                    @Html.DisplayNameForInnerType((PollResponseDto p) => p.EndDate)
                </th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Data != null)
            {
                @foreach (var poll in Model.Data)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => poll.Title)
                        </td>
                        <td>
                            @TimeZoneInfo.ConvertTime(poll.StartDate, TimeZoneInfo.FindSystemTimeZoneById("SA Pacific Standard Time")).ToString("MM/dd/yyyy hh:mm tt")
                        </td>
                        <td>
                            @TimeZoneInfo.ConvertTime(poll.EndDate, TimeZoneInfo.FindSystemTimeZoneById("SA Pacific Standard Time")).ToString("MM/dd/yyyy hh:mm tt")
                        </td>
                        <td>
                            @if (poll.StartDate > DateTime.UtcNow)
                            {
                                <span class="badge badge-warning">Pendiente</span>
                            }
                            else if(poll.EndDate < DateTime.UtcNow)
                            {
                                <span class="badge badge-danger">Finalizada</span>
                            }
                            else
                            {
                                <span class="badge badge-success">En progreso</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@poll.Address">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No hay votaciones registradas</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>